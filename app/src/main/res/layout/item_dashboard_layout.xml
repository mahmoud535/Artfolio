<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/con"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/action_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardCornerRadius="18dp"
        app:cardMaxElevation="5dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/con">

        <ImageView
            android:id="@+id/iv_dashboard_item_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description"
            android:src="@drawable/logo_designer_store_light_gray"
            app:shapeAppearanceOverlay="@style/border" />

        <!--    <View-->
        <!--        android:id="@+id/view_divider"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="1dp"-->
        <!--        android:layout_below="@id/iv_dashboard_item_image"-->
        <!--        android:background="@color/colorBorder" />-->


    </androidx.cardview.widget.CardView>

    <com.example.designersstore.presentation.utils.MSPTextViewBold
        android:id="@+id/tv_dashboard_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/action_cart"
        app:layout_constraintTop_toBottomOf="@+id/action_cart"
        tools:text="Item Name" />

    <com.example.designersstore.presentation.utils.MSPTextView
        android:id="@+id/tv_dashboard_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="@+id/action_cart"
        app:layout_constraintStart_toStartOf="@+id/action_cart"
        app:layout_constraintTop_toBottomOf="@+id/tv_dashboard_item_title"
        tools:text="$100.00" />
</androidx.constraintlayout.widget.ConstraintLayout>






